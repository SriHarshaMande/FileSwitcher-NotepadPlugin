{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build FileSwitcher Plugin",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"build.ps1"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Build FileSwitcher Plugin (Batch)",
			"type": "shell",
			"command": "build.bat",
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Install Plugin",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"install.ps1"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOn": "Build FileSwitcher Plugin"
		}
	]
}